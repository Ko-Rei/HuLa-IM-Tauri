{
  "productName": "HuLa",
  "version": "1.4.0",
  "identifier": "com.tauri.build",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:6130"
  },
  "bundle": {
    "active": true,
    "resources": [
      "tray"
    ],
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    }
  },
  "plugins": {},
  "app": {
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "登录",
        "label": "hula-login",
        "url": "/login",
        "fullscreen": false,
        "resizable": false,
        "center": true,
        "width": 320,
        "height": 448,
        "decorations": false,
        "transparent": false
      },
      {
        "label": "tray",
        "url": "/tray",
        "resizable": false,
        "center": false,
        "visible": false,
        "width": 130,
        "height": 356,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  }
}